{
    "name": "markjarjour/flight-assessment",
    "authors": [
        {
            "name": "Mark Jarjour",
            "email": "markjarjour@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "scripts": {
        "post-install-cmd": "composer install --working-dir=tools/php-cs-fixer",
        "lint": "tools/php-cs-fixer/vendor/bin/php-cs-fixer fix src tests",
        "start": "php -S 0.0.0.0:8000 api.php",
        "test": "vendor/bin/phpunit tests"
    },
    "config": {
        "process-timeout": 0
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    }
}